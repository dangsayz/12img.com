{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/daily?secret=${CRON_SECRET}",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/contest-winner",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/send-workflows",
      "schedule": "0 8 * * *"
    }
  ],
  "functions": {
    "app/api/share/upload/route.ts": {
      "maxDuration": 60
    },
    "app/gallery/*/page.tsx": {
      "maxDuration": 30
    }
  }
}
